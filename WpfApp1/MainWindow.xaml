<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="792.013" Width="1621.637" Loaded="Window_Loaded" WindowState="Maximized" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Button x:Name="btnDownload" Content="Load data" HorizontalAlignment="Left" Height="52" Margin="466,12,0,0" VerticalAlignment="Top" Width="183" Click="DownloadButton_Click"/>
            <TextBox x:Name="txbLectorFilter" HorizontalAlignment="Left" Height="23" Margin="288,48,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="169"/>
            <TextBlock HorizontalAlignment="Left" Margin="19,51,0,0" TextWrapping="Wrap" Text="Type lector (part) or exam name here to filter on:" VerticalAlignment="Top"/>
            <TextBox x:Name="txbStudFulter" HorizontalAlignment="Left" Height="57" Margin="760,10,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="249"/>
            <Label Content="Zoek student" HorizontalAlignment="Left" Margin="674,25,0,0" VerticalAlignment="Top"/>
            <Button Visibility="Hidden" x:Name="btnDebug" Content="Button" HorizontalAlignment="Left" Margin="1116,10,0,0" VerticalAlignment="Top" Width="75" Click="btnDebug_Click"/>
            <Button x:Name="btnMissing" Content="Missing students?" HorizontalAlignment="Left" Margin="1076,25,0,0" VerticalAlignment="Top" Width="75" Click="btnMissing_Click"/>
            <CheckBox x:Name="chkRefresh" Content="Refresh automatisch elke 30sec" HorizontalAlignment="Left" Margin="204,25,0,0" VerticalAlignment="Top"/>
            <Canvas x:Name="cnvTimeMout" HorizontalAlignment="Left" Height="51" Margin="590,12,0,0" VerticalAlignment="Top" Width="59" Background="Red" Visibility="Hidden"/>
            <Button Content="Magic button" Name="btnMagic" HorizontalAlignment="Left" Margin="1425,12,0,0" VerticalAlignment="Top" Width="173" Height="40" Click="MagicButton_Click"/>

        </Grid>
        <Grid Grid.Row="1" Margin="15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2.5*"/>


                <ColumnDefinition Width="4*"/>

            </Grid.ColumnDefinitions>
            <ScrollViewer VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Visible" Grid.Column="0">
                <ListBox Name="lbSessions"  >
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal"   Background="{Binding StateAsColor}">
                                <TextBlock Text="{Binding OrderName}"/>
                                <Button Click="ButtonViewScreenShots_Click">Images</Button>
                                <Button Name="btnCloseSession" Click="btnCloseSession_Click">Close Session</Button>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </ScrollViewer>






            <ScrollViewer  Grid.Column="1" >
                <ListView Name="lbScreens">
                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel MaxWidth="500"/>

                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Image Source="{Binding Thumb}" MouseLeftButtonUp="Image_MouseLeftButtonUp"></Image>
                        </DataTemplate>
                    </ListBox.ItemTemplate>

                </ListView>
            </ScrollViewer>
            <Grid Grid.Column="3">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <TextBlock Name="txbCurrName" FontSize="20"></TextBlock>
                <Image Name="imfull"  Grid.Row="1"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" MouseLeftButtonUp="imfull_MouseLeftButtonUp"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
